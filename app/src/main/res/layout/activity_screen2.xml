<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Data binding variables -->
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TextView para mostrar la informaci贸n del servidor -->
        <TextView
            android:id="@+id/serverInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receivedImage"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Bot贸n para iniciar el servidor -->
        <Button
            android:id="@+id/startServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Server" />

        <!-- Bot贸n para iniciar el cliente -->
        <Button
            android:id="@+id/startClientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startServerButton"
            android:text="Start Client" />

        <!-- Bot贸n para enviar un mensaje -->
        <Button
            android:id="@+id/sendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startClientButton"
            android:text="Send Message" />

        <!-- ImageView para mostrar la imagen recibida -->
        <ImageView
            android:id="@+id/receivedImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sendMessageButton" />

        <!-- TextView para mostrar los datos del cliente -->
        <TextView
            android:id="@+id/clientDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serverInfoTextView"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</layout>
